<nav>
  <ul id="navbar-top" class="navbar">
    <li class="navbar__name">
      <span class="navbar__name--impact">Jeff</span>Stolz
    </li>
    <div id="toggle" class="navbar__link-list">
      <li class="navbar__link">
        <%= link_to t("navbar.work-heading"), "index.html" %>
      </li>
      <li class="navbar__link">
        <%= link_to t("navbar.about-heading"), "about.html" %>
      </li>
      <li class="navbar__link">
        <%= link_to t("navbar.contact-heading"), "contact.html" %>
      </li>
    </div>
    <li onclick="myFunction()" class="navbar__hamburger">
      <%= svg "hamburger" %>
    </li>
  </ul>
</nav>

<script>
  function myFunction() {
      var x = document.getElementById("navbar-top");
      if (x.className === "navbar") {
          x.className += " responsive";
      } else {
          x.className = "navbar";
      }
  }
</script>
