---
title: Case Study - HMH Marketplace
---

<main class="split-layout">

  <h1><%= t("universal.hmh-heading") %></h1>
  <p><%= t("universal.case-study-heading") %></p>
  <h4 class="work__overview"><%= t("hmh.overview-heading") %></h4>
  <%= image_tag(
    "hmh-overview.jpg",
    class: "work__image--large-spacing work__image--border",
    alt: t("hmh.overview-alt"),
  ) %>

  <section class="split-layout__section">
    <h2 class="split-layout__section-header">
      <%= t("hmh.background-heading") %>
    </h2>
    <div class="split-layout__section-content">
      <p><%= t("hmh.background-content-1") %></p>
      <p><%= t("hmh.background-content-2") %></p>
    </div>
  </section>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <div class="split-layout__section-header">
      <h2>
        <%= t("hmh.understand-heading") %>
      </h2>
      <p>
        <%= t("hmh.sprint-heading-1") %>
      </p>
    </div>
    <div class="split-layout__section-content">
      <p><%= t("hmh.understand-content") %></p>
    </div>
  </section>

  <%= image_tag(
    "hmh-uxcanvas.jpg",
    class: "work__image--small-spacing",
    alt: t("hmh.understand-alt-1"),
  ) %>
  <p><%= t("hmh.understand-footnote-1") %></p>

  <%= image_tag(
    "hmh-map.jpg",
    class: "work__image--small-spacing",
    alt: t("hmh.understand-alt-2"),
  ) %>
  <p><%= t("hmh.understand-footnote-2") %></p>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <div class="split-layout__section-header">
      <h2>
        <%= t("hmh.sketch-heading") %>
      </h2>
      <p>
        <%= t("hmh.sprint-heading-2") %>
      </p>
    </div>
    <div class="split-layout__section-content">
      <p><%= t("hmh.sketch-content") %></p>
    </div>
  </section>

  <%= image_tag(
    "hmh-sketches.jpg",
    class: "work__image--small-spacing",
    alt: t("hmh.sketch-alt"),
  ) %>
  <p><%= t("hmh.sketch-footnote") %></p>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <div class="split-layout__section-header">
      <h2>
        <%= t("hmh.decide-heading") %>
      </h2>
      <p>
        <%= t("hmh.sprint-heading-3") %>
      </p>
    </div>
    <div class="split-layout__section-content">
      <p><%= t("hmh.decide-content") %></p>
    </div>
  </section>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <div class="split-layout__section-header">
      <h2>
        <%= t("hmh.prototype-heading") %>
      </h2>
      <p>
        <%= t("hmh.sprint-heading-4") %>
      </p>
    </div>
    <div class="split-layout__section-content">
      <p><%= t("hmh.prototype-content") %></p>
    </div>
  </section>

  <section class="work__solutions--wrapper">

    <div class="work__solutions">
      <div class="work__solution-item-small-spacing">
        <%= image_tag(
          "hmh-solution-1.jpg",
          class: "work__image--x-small-spacing",
          alt: t("hmh.solution-1-alt"),
        ) %>
      </div>
      <div class="work__solution-item-small-spacing">
        <%= image_tag(
          "hmh-solution-2.jpg",
          class: "work__image--x-small-spacing work__image--border",
          alt: t("hmh.solution-2-alt"),
        ) %>
      </div>
    </div>

    <div class="work__solutions">
      <div class="work__solution-item-small-spacing">
        <%= image_tag(
          "hmh-solution-3.jpg",
          class: "work__image--x-small-spacing work__image--border",
          alt: t("hmh.solution-3-alt"),
        ) %>
      </div>
      <div class="work__solution-item-small-spacing">
        <%= image_tag(
          "hmh-solution-4.jpg",
          class: "work__image--x-small-spacing",
          alt: t("hmh.solution-4-alt"),
        ) %>
      </div>
    </div>

  </section>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <div class="split-layout__section-header">
      <h2>
        <%= t("hmh.validate-heading") %>
      </h2>
      <p>
        <%= t("hmh.sprint-heading-5") %>
      </p>
    </div>
    <div class="split-layout__section-content">
      <p><%= t("hmh.validate-content") %></p>
    </div>
  </section>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <h2 class="split-layout__section-header">
      <%= t("hmh.outcome-heading") %>
    </h2>
    <div class="split-layout__section-content">
      <p><%= t("hmh.outcome-content") %></p>
    </div>
  </section>

  <%= image_tag(
    "hmh-solution-5.jpg",
    class: "work__image--small-spacing work__image--border",
    alt: t("hmh.solution-5-alt"),
  ) %>

  <hr class="split-layout__divider">

  <section class="split-layout__section">
    <h2 class="split-layout__section-header">
      <%= t("hmh.reflection-heading") %>
    </h2>
    <div class="split-layout__section-content">
      <p><%= t("hmh.reflection-content") %></p>
    </div>
  </section>

</main>
